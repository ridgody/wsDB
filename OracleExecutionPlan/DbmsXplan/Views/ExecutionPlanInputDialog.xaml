<Window x:Class="wsDB.OracleExecutionPlan.DbmsXplan.Views.ExecutionPlanInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="실행계획 정보 입력" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- SQL ID -->
        <Label Grid.Row="0" Content="SQL ID:" Margin="0,0,0,5"/>
        <TextBox x:Name="SqlIdTextBox" Grid.Row="0" Margin="80,0,0,5" Height="25"/>
        
        <!-- 실행 위치 -->
        <Label Grid.Row="1" Content="실행 위치:" Margin="0,5,0,5"/>
        <TextBox x:Name="ExecutionLocationTextBox" Grid.Row="1" Margin="80,5,0,5" Height="25"/>
        
        <!-- 쿼리 -->
        <Label Grid.Row="2" Content="쿼리:" Margin="0,5,0,5"/>
        <TextBox x:Name="QueryTextBox" 
                 Grid.Row="3" 
                 Height="120" 
                 Margin="0,5,0,5"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"/>
        
        <!-- 바인드 변수 -->
        <Label Grid.Row="4" Content="바인드 변수:" Margin="0,5,0,5" VerticalAlignment="Top"/>
        <TextBox x:Name="BindVariablesTextBox" 
                 Grid.Row="4" 
                 Margin="0,30,0,5"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="11"/>
        
        <!-- 메모 -->
        <Label Grid.Row="5" Content="메모:" Margin="0,5,0,5"/>
        <TextBox x:Name="NotesTextBox" 
                 Grid.Row="5" 
                 Height="60" 
                 Margin="80,5,0,5"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
        
        <!-- 버튼 -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="OkButton" 
                    Content="확인" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="취소" 
                    Width="80" 
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>