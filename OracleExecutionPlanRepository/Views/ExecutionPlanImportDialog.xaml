<!-- ExecutionPlanRepository/Views/ExecutionPlanImportDialog.xaml -->
<Window x:Class="wsDB.OracleExecutionPlanRepository.Views.ExecutionPlanImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="실행계획 가져오기" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 제목 및 옵션 -->
        <GroupBox Grid.Row="0" Header="가져오기 옵션" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <RadioButton Grid.Row="0" x:Name="ImportFromFileRadio" 
                             Content="텍스트 파일에서 가져오기" 
                             IsChecked="True" 
                             Margin="0,5"
                             Checked="ImportOption_Changed"/>
                
                <RadioButton Grid.Row="1" x:Name="ImportFromClipboardRadio" 
                             Content="클립보드에서 가져오기" 
                             Margin="0,5"
                             Checked="ImportOption_Changed"/>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button x:Name="SelectFileButton" Content="파일 선택..." 
                            Width="100" Height="25" 
                            Click="SelectFileButton_Click"/>
                    <TextBlock x:Name="SelectedFileText" 
                               Text="파일이 선택되지 않았습니다." 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- 미리보기 -->
        <GroupBox Grid.Row="1" Header="미리보기">
            <ScrollViewer>
                <TextBox x:Name="PreviewTextBox"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="10"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Background="LightGray"/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- 버튼 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="ImportButton" 
                    Content="가져오기" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"
                    IsEnabled="False"
                    Click="ImportButton_Click"/>
            <Button x:Name="CancelButton" 
                    Content="취소" 
                    Width="80" 
                    Height="30"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>